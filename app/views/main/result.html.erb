<div class="container mb-5">
  <%= render partial: "layouts/share" %>
  <p class="h2 mb-5 text-center text-secondary">おつかれさまでした</p>
  <div class="card mb-4 p-4">
    <p class="mb-1 h5 text-center"><%= @problem %></p>
    <p class="mb-3 h5 text-center"><i class="fas fa-chevron-down"></i></p>

    <% if @answers.present? %>
      <ul id="result_list" class="list-group">
        <% @answers.each do |ans| %>
          <li class="list-group-item"><%= ans %></li>
        <% end %>
      </ul>
      <i id="copy_icon" class="far fa-copy h4 mt-3 text-right" style="cursor: pointer;"></i>
    <% else %>
      <p class="text-center">何も思いつきませんでした...</p>
    <% end %>
  </div>
  <%= link_to "トップページ", root_path, id: "top_link", class: "btn btn-secondary w-50 d-block mx-auto", style: "min-width: 200px;", data: {"turbolinks": false} %>
</div>

<%= render partial: "advertise" %>

<div id="copy_area"></div>
