<div id="main_content" class="grey lighten-5">
  <div class="container">
    <div class="section">
      <%= render "problem_card", problem: @problem %>
    </div>

    <div class="section">
      <% @categories.each do |category| %>
        <hr>
        <p class="center-align blue-text"><%= category[1] %></p>
        <% if @answers[category[0]].present? %>
          <div class="row">
            <% @answers[category[0]].each do |ans| %>
              <div class="col s12">
                <div class="card my-1">
                  <div class="card-content center-align"><%= ans %></div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>

      <div class="mt-3 clearfix">
        <span class="float-left">
          <i id="change_hashtag_mode_icon" class="fas fa-hashtag mx-2 h4 text-secondary active" style="cursor: pointer;"></i>
        </span>
        <span class="float-right">
          <i id="share_result_on_twitter" class="fab fa-twitter mx-2 h4" style="color: #55acee; text-decoration: none; cursor: pointer;"></i>
          <i id="share_result_on_facebook" class="fab fa-facebook mx-2 h4" style="color: #3B5998; text-decoration: none; cursor: pointer;"></i>
          <i id="copy_icon" class="far fa-copy mx-2 h4" style="cursor: pointer;"></i>
        </span>
      </div>
  </div>
</div>

<%= render partial: "advertise" %>

<%# modal that changes category's name %>
<div class="modal fade" id="category_name_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">カテゴリ名の変更</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="category_name_form">
          <div class="form-group">
            <input id="category_name_input" class="form-control" value="">
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button id="category_name_modal_cancel" type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
        <button id="category_name_modal_save" type="button" class="btn btn-secondary" data-dismiss="modal">Save</button>
      </div>
    </div>
  </div>
</div>

<%# copy area %>
<div id="copy_area"></div>
