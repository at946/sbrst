<div class="container mb-5">
  <%= image_tag 'logo_typeA.png', class: "d-block mx-auto mw-100" %>
  <p class="mb-5 text-center text-secondary">とりあえずブレストして、頭の中を整理しませんか？</p>

  <% if @setting.errors.present? %>
    <div class="alert alert-warning" role="alert">
      <% @setting.errors.messages.each do |attr, msg| %>
        <p><%= @setting.errors.full_messages_for(attr).first %></p>
      <% end %>
    </div>
  <% end %>

  <%= form_with url: run_path, model: @setting, local: true do |form| %>
    <div class="form-group">
      <%= form.label :problem %>
      <%= form.text_field :problem, class: "form-control", autofocus: true %>
    </div>
    <div class="form-group">
      <%= form.label :limit_time %>
      <div class="input-group">
        <%= form.number_field :limit_time, class: "form-control", "aria-describedby": :limit_time_append %>
        <div class="input-group-append">
          <span class="input-group-text" id="limit_time_append">分</span>
        </div>
      </div>
    </div>
    <%= form.submit "ブレストを始める", class: "btn btn-secondary d-block mx-auto mt-5 w-50", id: "start_brasto_button" %>
  <% end %>
</div>
