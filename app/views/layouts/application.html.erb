      <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
      <script>
        (adsbygoogle = window.adsbygoogle || []).push({
          google_ad_client: "ca-pub-5506228292313271",
          enable_page_level_ads: true
        });
      </script>
      <!-- End Google Adsense -->
    <% end %>
  </head>

  <body class="d-flex flex-column h-100" cz-shortcut-listen="true">
    <% if Rails.env.production? %>
      <!-- Google Tag Manager (noscript) -->
      <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-TJNFNZH"
      height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
      <!-- End Google Tag Manager (noscript) -->
    <% end %>
    <nav class="navbar bg-primary flex-shrink-0">
      <%= link_to root_path do %>
        <%= image_tag 'logo_typeB.png', id: "logo", class: "navbar-brand p-0", style: "height: 30px;" %>
      <% end %>
    </nav>

    <main role="main" class="flex-shrink-0">
      <%= yield %>
    </main>

    <footer class="footer mt-auto py-3 bg-primary text-center text-muted">
      <span>(c) at.</span>
    </footer>
  </body>

</html>
